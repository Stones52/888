            function t(key) {
                const lang = localStorage.getItem('lang') || 'ru';
                const parts = key.split('.');
                let cur = translations[lang];
                for (const part of parts) {
                    if (!cur) break;
                    cur = cur[part];
                }
                return typeof cur === 'string' ? cur : key;
            }

            function applyTranslations() {
                document.querySelectorAll('[data-i18n]').forEach(el => {
                    const key = el.getAttribute('data-i18n');
                    const val = t(key);
                    if (val && el) {
                        el.textContent = val;
                    }
                });
                // Update document lang and title
                const lang = localStorage.getItem('lang') || 'ru';
                document.documentElement.setAttribute('lang', lang);
                // Keep original brand, just set title part
                const base = 'CryptoRichLife - ';
                const map = { ru: 'Премиум заработок в криптовалюте', en: 'Premium crypto earnings', es: 'Ganancias cripto premium', sw: 'Mapato ya crypto ya kiwango cha juu' };
                document.title = base + (map[lang] || map['ru']);
            }

            const langSelect = document.getElementById('languageSelect');
            if (langSelect) {
                const savedLang = localStorage.getItem('lang') || 'ru';
                langSelect.value = savedLang;
                langSelect.addEventListener('change', () => {
                    localStorage.setItem('lang', langSelect.value);
                    applyTranslations();
                });
            }

            // Применить переводы при загрузке
            applyTranslations();
            const navLinks = document.querySelectorAll('.nav-link');
            const pages = document.querySelectorAll('.page');
            
            // Функция переключения страниц
            function showPage(pageId) {
                // Скрыть все страницы
                pages.forEach(page => {
                    page.classList.remove('active');
                });
                
                // Показать выбранную страницу
                document.getElementById(pageId).classList.add('active');
                
                // Обновить активную ссылку в навигации
                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('data-page') === pageId) {
                        link.classList.add('active');
                    }
                });
                
                // Прокрутить к верху страницы
                window.scrollTo(0, 0);
            }
            
            // Обработчики для навигационных ссылок
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const pageId = this.getAttribute('data-page');
                    showPage(pageId);
                });
            });
            
            // Обработчики для кнопок
            document.querySelectorAll('.btn[data-page]').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    const pageId = this.getAttribute('data-page');
                    showPage(pageId);
                });
            });
            
            // Обработчики для форм
            document.getElementById('earnForm')?.addEventListener('submit', function(e) {
                e.preventDefault();
                alert(translations[localStorage.getItem('lang')||'ru'].alerts.earnSubmitted);
                showPage('reviews');
            });
            
            document.getElementById('reviewForm')?.addEventListener('submit', function(e) {
                e.preventDefault();
                alert(translations[localStorage.getItem('lang')||'ru'].alerts.reviewSubmitted);
            });
            
            document.getElementById('contactForm')?.addEventListener('submit', function(e) {
                e.preventDefault();
                alert(translations[localStorage.getItem('lang')||'ru'].alerts.contactSent);
            });
            
            // Обработчики для карточек кошельков
            document.querySelectorAll('.wallet-card').forEach(card => {
                card.addEventListener('click', function() {
                    const walletType = this.getAttribute('data-wallet');
                    connectWallet(walletType, 'page');
                });
            });
            
            // Обработчики для кнопок подключения кошельков
            document.querySelectorAll('.wallet-connect-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const walletType = this.getAttribute('data-wallet');
                    
                    if (window.location.hash === '#airdrop' || document.getElementById('airdrop').classList.contains('active')) {
                        connectWallet(walletType, 'airdrop');
                    } else {
                        connectWallet(walletType, 'page');
                    }
                });
            });
            
            // Кнопка получения аирдропа
            document.getElementById('claimAirdrop')?.addEventListener('click', function() {
                const email = document.getElementById('airdropEmail').value;
                if (!email) {
                    alert(translations[localStorage.getItem('lang')||'ru'].alerts.enterEmail);
                    return;
                }
                alert(translations[localStorage.getItem('lang')||'ru'].alerts.airdropRequested);
            });
            
            // Отключение кошелька
            document.getElementById('disconnectWallet')?.addEventListener('click', function() {
                document.getElementById('walletInfo').style.display = 'none';
                document.querySelectorAll('.wallet-card').forEach(c => {
                    c.style.borderColor = 'rgba(255, 255, 255, 0.1)';
                });
                alert(translations[localStorage.getItem('lang')||'ru'].alerts.walletDisconnected);
            });
            
            // Таймер обратного отсчета для аирдропа
            function updateCountdown() {
                const countdownElement = document.getElementById('countdown');
                const homeCountdownElement = document.getElementById('homeCountdown');
                if (countdownElement || homeCountdownElement) {
                    // Установим время до конца акции (3 дня)
                    const now = new Date();
                    const endDate = new Date(now.getTime() + 3 * 24 * 60 * 60 * 1000);
                    
                    const timeLeft = endDate - now;
                    
                    const hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                    const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
                    const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);
                    
                    const timeString = `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                    
                    if (countdownElement) countdownElement.textContent = timeString;
                    if (homeCountdownElement) homeCountdownElement.textContent = timeString;
                }
            }
            
            // Запуск таймера
            setInterval(updateCountdown, 1000);
            updateCountdown();
            
            // Функция подключения кошелька
            async function connectWallet(walletType, context = 'main') {
                const lang = localStorage.getItem('lang') || 'ru';
                // Web3Modal for WalletConnect support
                const providerOptions = {
                    walletconnect: {
                        package: window.WalletConnectProvider?.default || window.WalletConnectProvider,
                        options: {
                            rpc: {
                                1: 'https://rpc.ankr.com/eth',
                                137: 'https://rpc.ankr.com/polygon'
                            }
                        }
                    }
                };
                const Web3ModalCtor = (window.Web3Modal && (window.Web3Modal.default || window.Web3Modal)) || null;
                const web3Modal = Web3ModalCtor ? new Web3ModalCtor({
                    cacheProvider: false,
                    providerOptions
                }) : null;

                // Prefer explicit wallet type
                let provider = null;
                try {
                    if (walletType === 'walletconnect') {
                        provider = await web3Modal.connectTo('walletconnect');
                    } else if (walletType === 'metamask' && typeof window.ethereum !== 'undefined') {
                        provider = window.ethereum;
                        await provider.request({ method: 'eth_requestAccounts' });
                    } else if (typeof window.ethereum !== 'undefined') {
                        provider = window.ethereum;
                        await provider.request({ method: 'eth_requestAccounts' });
                    } else {
                        alert(translations[lang].alerts.metamaskMissing);
                        window.open('https://metamask.io/download.html', '_blank');
                        return;
                    }

                    const accounts = await provider.request({ method: 'eth_accounts' });
                    const account = accounts[0];
                    const balanceHex = await provider.request({ method: 'eth_getBalance', params: [account, 'latest'] });
                    const balanceInEth = parseInt(balanceHex, 16) / 1e18;
                    const chainId = await provider.request({ method: 'eth_chainId' });
                        let networkName = 'Unknown';
                        
                        switch (chainId) {
                            case '0x1':
                                networkName = 'Ethereum Mainnet';
                                break;
                            case '0x3':
                                networkName = 'Ropsten Testnet';
                                break;
                            case '0x4':
                                networkName = 'Rinkeby Testnet';
                                break;
                            case '0x5':
                                networkName = 'Goerli Testnet';
                                break;
                            case '0x2a':
                                networkName = 'Kovan Testnet';
                                break;
                            case '0x89':
                                networkName = 'Polygon Mainnet';
                                break;
                            case '0x13881':
                                networkName = 'Mumbai Testnet';
                                break;
                            default:
                                networkName = `Unknown (${chainId})`;
                        }
                        
                        // Обновляем интерфейс в зависимости от контекста
                        if (context === 'main') {
                            document.getElementById('walletConnected').style.display = 'block';
                            document.getElementById('walletAddress').textContent = account;
                            document.getElementById('walletBalance').textContent = `${balanceInEth.toFixed(4)} ETH`;
                            document.getElementById('walletNetwork').textContent = networkName;
                        } else if (context === 'page') {
                            document.getElementById('walletInfo').style.display = 'block';
                            document.getElementById('walletPageAddress').textContent = account;
                            document.getElementById('walletPageBalance').textContent = `${balanceInEth.toFixed(4)} ETH`;
                            document.getElementById('walletPageNetwork').textContent = networkName;
                        } else if (context === 'airdrop') {
                            document.getElementById('connectWalletAirdrop').style.display = 'none';
                            document.getElementById('walletConnectedAirdrop').style.display = 'block';
                            document.getElementById('airdropWalletAddress').textContent = account;
                        }
                        
                        // Подсветка выбранного кошелька
                        document.querySelectorAll('.wallet-card').forEach(c => {
                            c.style.borderColor = 'rgba(255, 255, 255, 0.1)';
                        });
                        
                        const selectedCard = document.querySelector(`.wallet-card[data-wallet="${walletType}"]`);
                        if (selectedCard) {
                            selectedCard.style.borderColor = 'var(--accent)';
                        }
                        alert(translations[lang].alerts.walletConnected(walletType));

                } catch (error) {
                    console.error(error);
                    alert(translations[lang].alerts.walletError);
                }
            }
            
            // Обработчик для кнопки подключения кошелька на главной
            document.getElementById('connectWalletBtn').addEventListener('click', function() {
                connectWallet('metamask', 'main');
            });
            
            // Обработчик для кнопки получения аирдропа на главной
            document.getElementById('claimAirdropBtn').addEventListener('click', function() {
                alert(translations[localStorage.getItem('lang')||'ru'].alerts.airdropRequested);
            });
        });
    </script>
</body>
</html>
